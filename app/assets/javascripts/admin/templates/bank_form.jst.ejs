<form>
  <div>
    <label>Name</label>
    <input type="text" name="name" placeholder="Name" value="<%= name %>" />
  </div>

  <div>
    <label>Address</label>
    <input type="text" name="address" placeholder="Address" value="<%= address %>" />
  </div>

  <div>
    <label>Zip Code</label>
    <input type="text" name="zip" placeholder="ex. 11111" value="<%= zip %>" />
  </div>

  <div>
    <label>Geodata</label>
    <input type="text" name="geo:lat" placeholder="latitude" value="<%= geo.lat %>" />
    <input type="text" name="geo:lng" placeholder="longitude" value="<%= geo.lng %>" />
    <button class="bank-geocode">geocode</button>
  </div>

  <div>
    <label>Phone Number</label>
    <input type="text" name="phone" placeholder="ex. 5554434444" value="<%= phone %>" />
  </div>

  <div>
    <label for="ssh">Safe Stop Hub?</label>
    <% if (ssh) { %>
      <input type="checkbox" name="ssh" checked="checked" />
    <% } else { %>
      <input type="checkbox" name="ssh" />
    <% } %>
  </div>

  <div>
    <label for="ssa">Safe Stop Account?</label>
    <% if (ssa) { %>
      <input type="checkbox" name="ssa" checked="checked" />
    <% } else { %>
      <input type="checkbox" name="ssa" />
    <% } %>
  </div>

  <div>
    <label>Monthly Fee</label>
    <input type="text" name="mf" value="<%= mf %>" />
  </div>

  <div>
    <label>Yearly Fee</label>
    <input type="text" name="yf" value="<%= yf %>" />
  </div>

  <div>
    <label>Min Balance</label>
    <input type="text" name="mb" value="<%= mb %>" />
  </div>

  <div>
    <label>Opening Deposit</label>
    <input type="text" name="od" value="<%= od %>" />
  </div>

  <div>
    <label>Opening Fee</label>
    <input type="text" name="of" value="<%= of %>" />
  </div>

  <div>
    <label for="gid">US Government ID?</label>
    <% if (gid) { %>
      <input type="checkbox" name="gid" checked="checked" />
    <% } else { %>
      <input type="checkbox" name="gid" />
    <% } %>
  </div>

  <div>
    <label>SS or ITN</label>
    <select name="ssitn">
      <option value="none"<% if (ssitn === 'none') { %> selected<% } %>>none</option>
      <option value="ss"<% if (ssitn === 'ss') { %> selected<% } %>>SS</option>
      <option value="ss_or_itn"<% if (ssitn === 'ss_or_itn') { %> selected<% } %>>SS or ITN</option>
    </select>
  </div>

  <div>
    <label>Notes</label>
    <textarea name="notes"><%= notes %></textarea>
  </div>

  <input type="submit" value="Save" />
</form>
